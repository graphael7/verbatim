

<h2>Enter the speech you would like to memorize</h2>


 <% if @speech.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@speech.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @speech.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@speech, as: :speech, url: '/memorize', method: 'post') do |f| %>


 

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, cols:30, rows:5, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Continue" %>
  </div>

<% end %>